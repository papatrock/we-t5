<%= form_with(model: [@jogo, @analise]) do |form| %>
  <% if @analise.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@analise.errors.count, "error") %> prohibited this analise from being saved:</h2>
      <ul>
        <% @analise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nota, class: "form-label" %>
    <%= form.number_field :nota, in: 1.0..10.0, step: 0.5, class: "form-control", style: "background-color: #555; color: white; border-color: #666;" %>
    <div class="form-text">Dê uma nota de 1.0 a 10.0.</div>
  </div>

  <div class="mb-3">
    <%= form.label :analise, "Sua análise", class: "form-label" %>
    <%= form.text_area :analise, rows: 5, class: "form-control", style: "background-color: #555; color: white; border-color: #666;" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Salvar Análise", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>